<h2>SuperHero search results:</h2>


<ul id="listheroes">
    {{#each searchedHero}}
    <li id="superhero">
        <img src="{{this.thumbnail.path}}.{{this.thumbnail.extension}}" alt="{{this.name}}">
        <button id="add-fav-btn">Add to your Favorites!</button>
        Name: {{this.name}}
        Description: {{this.description}}
        Comics:
        
        {{#each this.comics.items}}
        
            <li>{{this.name}}</li>
        
        
        {{/each}}
    </li>
    {{/each}}
</ul>
